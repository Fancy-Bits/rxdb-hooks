		"@typescript-eslint/eslint-plugin": "^2.21.0",
		"@typescript-eslint/parser": "^2.21.0",
		"eslint": "^6.8.0",
		"eslint-plugin-react": "^7.18.3",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"pouchdb-adapter-memory": "^7.2.1",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"react": "^16.13.0",
		"react-dom": "^16.13.0",
		"react-test-renderer": "^16.13.0",
